            ul.contacts__list
                .contacts__row
                    li.contacts__item
                        .contacts__icon
                            svg.icon.svg_blue
                                use(xlink:href="assets/svg/sprite.svg#skype") 
                        .grey_text.contacts__text matarasenko
                    li.contacts__item
                        .contacts__icon
                            svg.icon.svg_blue
                                use(xlink:href="assets/svg/sprite.svg#envelope_n") 
