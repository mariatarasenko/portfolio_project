                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-80` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item CSS3
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-70` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item JavaScript &amp; jQuery
                        .skills__wrap
                            .skills__title Backend
                                ul.skills__row_list
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-70` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item PHP
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-40` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item mySQL
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-50` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item  Node.js &amp; npm
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-30` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item Mongo.db
                        .skills__wrap
                            .skills__title Workflow
                                ul.skills__row_list
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-80` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item Gulp
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
                                            circle(class="circle__back" r="45" cx="50%" cy="50%" fill="none")
                                            circle(class=`circle__front circle-60` r="45" cx="50%" cy="50%" fill="none" transform="rotate(-90 55 55)")
                                        span.skills__row_item Webpack
                                    li.skills__item
                                        svg.skills__circles(viewBox="0 0 110 110")
