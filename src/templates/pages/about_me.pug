                                .contacts__icon
                                    svg.icon.svg_blue
                                        use(xlink:href="assets/svg/sprite.svg#skype") 
                                .contacts__text.blog_text matarasenko
                            li.contacts__item
                                .contacts__icon
                                    svg.icon.svg_blue
                                        use(xlink:href="assets/svg/sprite.svg#envelope2") 
                                .contacts__text.blog_text mariaatarasenko@gmail.com
                        .contacts__row
                            li.contacts__item
                                .contacts__icon
                                    svg.icon.svg_blue
                                        use(xlink:href="assets/svg/sprite.svg#phone") 
                                .contacts__text.blog_text +48 503 243 304
                            li.contacts__item
                                .contacts__icon
                                    svg.icon.svg_blue
                                        use(xlink:href="assets/svg/sprite.svg#map_marker") 
